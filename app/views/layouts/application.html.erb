<!DOCTYPE html>
<html>
  <head>
    <title>Movieflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag('jquery-1') %>
    <%= javascript_pack_tag('jquery-func') %>

    <style>

      .yellow a{
            color: #e7b038;
            text-decoration: underline;
            cursor: pointer;
      }

      .yellow a:hover {
        text-decoration: none;
        color: #fff;
        background-color: #000;
      }

      .red a{
            color: #ff361a;
            text-decoration: underline;
            cursor: pointer;
      }

      .red a:hover {
        text-decoration: none;
      }

    </style>
  </head>

  <body>


    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div id="shell">
  <div id="header">
    <h1 id="logo"><a href="#"><img src="/assets/movieflix-logo.png" width="240" height="50"/></a></h1>
    <div class="social"> <span>FOLLOW US ON:</span>
      <ul>
        <li><a class="twitter" href="#">twitter</a></li>
        <li><a class="facebook" href="#">facebook</a></li>
        <li><a class="vimeo" href="#">vimeo</a></li>
        <li><a class="rss" href="#">rss</a></li>
      </ul>
    </div>
    <div id="navigation">
      <ul>
        <li><a class="active" href="/">HOME</a></li>
        <li><a href="/carts/<%= session[:cart_id]%>">CART</a></li>
        <% if user_signed_in? %>
        <li><%= link_to 'PROFILE', edit_user_registration_path, :class => 'navbar-link' %></li>
        <li><%= link_to "LOGOUT", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      <% else %>
        <li><%= link_to "SIGN UP", new_user_registration_path, :class => 'navbar-link'  %></li>
        <li><%= link_to "LOGIN", new_user_session_path, :class => 'navbar-link'  %></li>
      <% end %>
        <% if session[:admin]%>
          <li><a href="/admin/logout">LOGOUT (ADMIN)</a></li>
            <% else %>
          <li><a href="/admin/login">LOGIN (ADMIN)</a></li>
        <% end %>
      </ul>
    </div>
    <div id="sub-navigation">
      <ul>
        <li><a href="#">SHOW ALL</a></li>
        <li><a href="#">LATEST TRAILERS</a></li>
        <li><a href="#">TOP RATED</a></li>
        <li><a href="#">MOST COMMENTED</a></li>
      </ul>
      <div id="search">
          <%= form_with url: "/gallery/search", local: true,method: :post do |form| %>
            <%= form.label :query, "Search for:" %>
            <%= form.text_field :query %>
            <%= form.submit "Search" %>
          <% end %>
      </div>
    </div>
  </div>
  <div id="main">
    <div id="content">
      <div class="box">
        <div class="head">
          <h2>MOVIES</h2>
          <% if session[:admin]%><p class="text-right yellow"><%= link_to 'ADD MOVIE', new_store_path %></p><% else %><p class="text-right yellow">View all</p><% end %>
        </div>
        <%= yield %>
        <div class="cl">&nbsp;</div>
      </div>
    </div>
  </div>
  <div id="footer">
    <p class="lf">Copyright &copy; 2010 <a href="#">SiteName</a> - All Rights Reserved</p>
    <p class="rf">Design by <a href="http://chocotemplates.com/">ChocoTemplates.com</a></p>
    <div style="clear:both;"></div>
  </div>
</div>
    
  </body>
</html>
